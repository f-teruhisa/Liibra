<% provide :title, "ï½œTheme" %>

  <!-- NavBar-->
<%= render partial: 'common/header' %>
<div class="intro-devise">
  <% breadcrumb :theme_choose %>
  <%= render partial: 'common/breadcrumb' %>
  <h2 class="h3_home wow fadeIn" data-wow-delay="0.6s">Choose Theme!</h2>
  <div class="theme-inner" style="display: inline-block;">
    <% @themes.each do |theme| %>
    <div class="group_action panel panel-default" style="margin: 10px;">
      <div class="panel-body">
        <p><h4><%= theme.title %></h4></p>
        <div class="image" style="background-image: url(<%= theme.image_url %>);"></div>
        <p><%= theme.information %></p>
        <%= link_to 'Rating', "/genres/#{@genre.id}/themes/#{theme.id}/rates", method: :get, :class =>"btn btn-primary withripple" %>
        <% if user_signed_in?&&theme.user_id.to_i == current_user.id %>
          <%= link_to 'Delete', "/genres/#{@genre.id}/themes/#{theme.id}/", method: :delete, data: {confirm: "Really?"},:class =>"btn btn-primary withripple" %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%= paginate(@themes) %>

<%= render partial: 'common/footer' %>
