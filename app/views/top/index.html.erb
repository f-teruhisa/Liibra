    </div>
  </div>

  <!-- FullScreen -->
    <div class="intro-header">
    <div class="col-xs-12 text-center abcen1">
      <h1 class="h1_home wow fadeIn animated animated" style="visibility: visible; animation-delay: 0.4s;">Libra</h1>
      <p class="h3_home wow fadeIn animated animated" style="visibility: visible; animation-delay: 0.4s;">Simply & Satisfactory Rating Application.</p>
      <ul class="list-inline intro-social-buttons">
        <li id="download" >
          <a href="/genres" class="btn  btn-lg mybutton_standard wow swing wow fadeIn animated animated" data-wow-delay="1.2s" style="visibility: visible; animation-delay: 1.2s;">Start!</a>
        </li>
      </ul>
    </div>
        <!-- /.container -->
    <div class="col-xs-12 text-center abcen wow fadeIn animated animated" style="visibility: visible;">
      <div class="button_down ">
        <a class="imgcircle wow bounceInUp animated animated" data-wow-duration="1.5s"  href="#whatis" style="visibility: visible; animation-duration: 1.5s;"></a>
      </div>
    </div>
