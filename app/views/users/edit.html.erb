<%= render partial: 'common/header' %>
<div class="row form">
  <div class="col-lg-12">
    <div class="form-group">
    <%= form_for current_user do |f| %>
    <h3>Your Avatar</h3>
      <div class="form-group file">
        <%= f.file_field :avatar, class: "form-control floating-label", placeholder: "Upload" %>
      </div>

      <h3>User Information</h3>
        <div class="col-lg-6">
          <%= f.text_field :family_name, placeholder: "Family name", class: "form-control" %>
        </div>

        <div class="col-lg-6">
          <%= f.text_field :first_name, placeholder: "First name", class: "form-control" %>
        </div>

        <div class="col-lg-6">
          <%= f.text_field :family_name_kana, placeholder: "セイ", class: "form-control" %>
        </div>

        <div class="col-lg-6">
          <%= f.text_field :first_name_kana, placeholder: "メイ", class: "form-control" %>
        </div>
      
        <%= f.submit "Send", class: "btn btn-primary withripple" %>
    <% end %>
   </div>
  </div>
</div>
<%= render partial: 'common/footer' %>